<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.geotdb.compile.view.MaterialEditTextElevation
        android:id="@+id/edtWaterDepth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_record_get_depth"
        android:phoneNumber="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/label_record_get_depth"
        app:met_iconLeft="@drawable/ai_icon_shendu" />

    <com.geotdb.compile.view.MaterialBetterSpinner
        android:id="@+id/sprMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_record_get_waterMode"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/label_record_get_waterMode"
        app:met_iconLeft="@drawable/ai_icon_qushui" />


</LinearLayout>
