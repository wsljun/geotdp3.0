<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lltItem"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#e7e8e9"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvwBeginDepth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="1m"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#777777" />

            <TextView
                android:id="@+id/tvwBeginEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:lines="1"
                android:text="~"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#777777" />

            <TextView
                android:id="@+id/tvwEndDepth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="3m"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="#777777" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvwType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:text="岩土"
            android:textAppearance="@style/base_list_title_style"
            android:textColor="#777777" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/tvwContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-啊父亲我就放弃哦i微积分屁哦气温降幅i哦欺骗我警方i破千万哈佛其未婚夫i起哦未婚夫i哦前往哈佛i其未婚夫i请问"
            android:textAppearance="@style/base_list_desc_style"
            android:textColor="#777777" />
    </LinearLayout>


</LinearLayout>

