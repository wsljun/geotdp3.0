<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.geotdb.compile.view.MaterialBetterSpinner
            android:id="@+id/sprWzcf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_record_layer_wzcf"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/label_record_layer_wzcf"
            app:met_iconLeft="@drawable/ai_icon_zhuangtai" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.geotdb.compile.view.MaterialBetterSpinner
            android:id="@+id/sprDjnd"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/hint_record_layer_djnd"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/label_record_layer_djnd"
            app:met_iconLeft="@drawable/ai_icon_duijiyears" />

        <com.geotdb.compile.view.MaterialBetterSpinner
            android:id="@+id/sprMsd"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/hint_record_layer_msd"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/label_record_layer_msd"
            app:met_iconLeft="@drawable/ai_icon_mishidu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.geotdb.compile.view.MaterialBetterSpinner
            android:id="@+id/sprJyx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_record_layer_jyx"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="@string/label_record_layer_jyx"
            app:met_iconLeft="@drawable/ai_icon_junyun" />

    </LinearLayout>
</LinearLayout>
